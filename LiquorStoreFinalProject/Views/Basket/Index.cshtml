﻿﻿@using LiquorStoreFinalProject.ViewModels;
@model IEnumerable<BasketVM>
@{
    Layout = null;
}

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Basket</title>
    <link rel="stylesheet" href="~/assets/css/styleBasket.css">
</head>

<body>
    <main>
        <div class="basket">
            <div class="basket-module">
                <label for="promo-code">Enter a promotional code</label>
                <input id="promo-code" type="text" name="promo-code" maxlength="5" class="promo-code-field">
                <button class="promo-code-cta">Apply</button>
            </div>
            <div class="basket-labels">
                <ul>
                    <li class="item item-heading">Item</li>
                    <li class="price">Price</li>
                    <li class="quantity">Quantity</li>
                    <li class="subtotal">Subtotal</li>
                </ul>
            </div>
            @if (!Model.Any())
            {
                <h1>Basket is empty</h1>
            }
            else
            {
                decimal totalPrice = 0;
                @foreach (var item in Model)
                {
                    decimal totalProductPrice = item.Count * @item.Price;
                    totalPrice += totalProductPrice;
                    <div class="basket-product">
                        <div class="item">
                            <div class="product-image">
                                <img src='@Url.Content($"~/{item.ImageURL}")' alt="Placholder Image 2" class="product-frame">
                            </div>
                            <div class="product-details">
                                <h1><strong>@*<span class="item-quantity">4</span>*@ @item.Name</strong> Lace Sleeve Cuff Dress</h1>
                                <p><strong>Navy, Size 18</strong></p>
                                <p>Product Code - 232321939</p>
                            </div>
                        </div>
                        <div class="price">@item.Price</div>
                        <div class="quantity">
                            <input type="number" value="@Convert.ToInt32(item.Count)" min="1" class="quantity-field">
                        </div>
                        <div class="subtotal">@totalProductPrice</div>
                        <div class="remove">
                            <a style="background-color: transparent;
    color: #777;
    float: none;
    text-decoration: underline;
    text-transform: uppercase;" href="/Basket/RemoveFromBasket/@item.Id">Remove</a>
                        </div>
                    </div>
                }
            }
        </div>
        <aside>
            <div class="summary">
                <div class="summary-total-items"><span class="total-items"></span> Items in your Bag</div>
                <div class="summary-subtotal">
                    <div class="subtotal-title">Subtotal</div>
                    <div class="subtotal-value final-value" id="basket-subtotal">130.00</div>
                    <div class="summary-promo hide">
                        <div class="promo-title">Promotion</div>
                        <div class="promo-value final-value" id="basket-promo">150.00</div>
                    </div>
                </div>
                <div class="summary-delivery">
                    <select name="delivery-collection" class="summary-delivery-selection">
                        <option value="0" selected="selected">Select Collection or Delivery</option>
                        <option value="collection">Collection</option>
                        <option value="first-class">Royal Mail 1st Class</option>
                        <option value="second-class">Royal Mail 2nd Class</option>
                        <option value="signed-for">Royal Mail Special Delivery</option>
                    </select>
                </div>
                <div class="summary-total">
                    <div class="total-title">Total</div>
                    <div class="total-value final-value" id="basket-total"></div>
                </div>
                <div class="summary-checkout">
                    <button class="checkout-cta">Go to Secure Checkout</button>
                </div>
            </div>
        </aside>
    </main>
</body>

</html>